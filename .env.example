# Free Roulette Spin System Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=casino_roulette
DB_USERNAME=casino_user
DB_PASSWORD=change_this_password_in_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_CASINO=INFO

# JVM Configuration
JVM_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=change_this_password_in_production

# Security Configuration (for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# External Integration (if needed)
# MAIN_SYSTEM_API_URL=https://main-casino-system.com/api
# MAIN_SYSTEM_API_KEY=your_api_key_here